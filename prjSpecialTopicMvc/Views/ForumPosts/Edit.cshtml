@model prjSpecialTopicMvc.ViewModels.Forum.ForumPostViewModel

@{
    ViewData["Title"] = "編輯文章";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ForumPost.PostId" />

    <div class="form-group">
        <label asp-for="ForumPost.Title"></label>
        <input asp-for="ForumPost.Title" class="form-control" />
        <span asp-validation-for="ForumPost.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ForumPost.Content"></label>
        <textarea asp-for="ForumPost.Content" class="form-control"></textarea>
        <span asp-validation-for="ForumPost.Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedCategoryId">分類</label>
        <select asp-for="SelectedCategoryId" class="form-control" asp-items="Model.Categories">
            <option value="">-- 請選擇分類 --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="SelectedFilterId">標籤</label>
        <select asp-for="SelectedFilterId" class="form-control" asp-items="Model.Filters">
            <option value="">-- 請選擇標籤 --</option>
        </select>
    </div>

    <input type="hidden" asp-for="ForumPost.Uid" />
    <input type="hidden" asp-for="ForumPost.CreatedAt" />
    <input type="hidden" asp-for="ForumPost.ViewCount" />
    <input type="hidden" asp-for="ForumPost.LikeCount" />
    <input type="hidden" asp-for="ForumPost.CommentCount" />
    <input type="hidden" asp-for="ForumPost.IsDeleted" />

    <button type="submit" class="btn btn-success mt-3">儲存變更</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">返回列表</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}