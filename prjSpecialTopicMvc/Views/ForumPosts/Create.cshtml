
@model prjSpecialTopicMvc.ViewModels.Forum.ForumPostViewModel

@{
    ViewData["標題"] = "新增論壇文章";
}

<h2 class="text-primary mb-4">新增文章</h2>

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ForumPost.標題" class="form-label">標題</label>
        <input asp-for="ForumPost.標題" class="form-control" />
        <span asp-validation-for="ForumPost.標題" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ForumPost.內容" class="form-label">內容</label>
        <textarea asp-for="ForumPost.內容" class="form-control" rows="5"></textarea>
        <span asp-validation-for="ForumPost.內容" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SelectedCategoryId" class="form-label">文章分類</label>
        <select asp-for="SelectedCategoryId" class="form-select" asp-items="Model.Categories">
            <option value="">-- 請選擇文章分類 --</option>
        </select>
        <span asp-validation-for="SelectedCategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SelectedFilterId" class="form-label">文章標籤</label>
        <select asp-for="SelectedFilterId" class="form-select" asp-items="Model.Filters">
            <option value="">-- 請選擇文章標籤 --</option>
        </select>
        <span asp-validation-for="SelectedFilterId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ForumPost.Uid" />
    <input type="hidden" asp-for="ForumPost.CreatedAt" />
    <input type="hidden" asp-for="ForumPost.ViewCount" />
    <input type="hidden" asp-for="ForumPost.LikeCount" />
    <input type="hidden" asp-for="ForumPost.CommentCount" />
    <input type="hidden" asp-for="ForumPost.IsDeleted" />

    <button type="submit" class="btn btn-success mt-3">發佈</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
