
@model IEnumerable<prjSpecialTopicMvc.Models.ForumPost>

@{
    ViewData["Title"] = "論壇文章列表";
}

<h2 class="text-primary mb-4">論壇文章列表</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">➕ 新增文章</a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>標題</th>
            <th>建立時間</th>
            <th>瀏覽數</th>
            <th>按讚數</th>
            <th>留言數</th>
            <th>分類</th>
            <th>標籤</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@item.CreatedAt?.ToString("yyyy/MM/dd")</td>
                <td>@item.ViewCount</td>
                <td>@item.LikeCount</td>
                <td>@item.CommentCount</td>
                <td>@item.PostCategory?.PostCategoryName</td>
                <td>@item.Filter?.FilterName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PostId" class="btn btn-sm btn-info">檢視</a>
                    <a asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-sm btn-warning">編輯</a>
                    <a asp-action="Delete" asp-route-id="@item.PostId" class="btn btn-sm btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
