@model prjSpecialTopicMvc.Models.DonateProject

@{
    ViewData["Title"] = "Create";
    var categoryList = ViewBag.CategoryList ?? new List<prjSpecialTopicMvc.Models.DonateCategory>();
}

<h1 class="text-center">📝 新增募資專案</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="Create" enctype="multipart/form-data" class="border p-4 bg-light rounded shadow">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="DonateCategoriesId" class="form-label"></label>
                    <select asp-for="DonateCategoriesId" class="form-control"
                            asp-items="@(new SelectList(categoryList, "DonateCategoriesId", "CategoriesName"))">
                        <option value="">--請選擇分類--</option>
                    </select>
                    <span asp-validation-for="DonateCategoriesId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProjectTitle" class="form-label"></label>
                    <input asp-for="ProjectTitle" class="form-control" />
                    <span asp-validation-for="ProjectTitle" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProjectDescription" class="form-label"></label>
                    <textarea asp-for="ProjectDescription" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="ProjectDescription" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TargetAmount" class="form-label"></label>
                    <input asp-for="TargetAmount" class="form-control" />
                    <span asp-validation-for="TargetAmount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">上傳圖片</label>
                    <input type="file" name="ProjectImage" class="form-control" />
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="送出並新增" class="btn btn-primary px-4" />
                    <a asp-action="List" class="btn btn-secondary ms-2">返回列表</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
