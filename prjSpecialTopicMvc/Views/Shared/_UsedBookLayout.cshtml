<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prjBookAppCoreMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    @* <link rel="stylesheet" href="~/prjBookAppCoreMVC.styles.css" asp-append-version="true" /> *@

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- _Layout用的 Stylesheet -->
    @* <link href="~/css/bootstrap.min.css" rel="stylesheet"> *@
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        body {
            /* background-color: WhiteSmoke; */
            background-color: #EFFDF5;
        }

        image {
            background-color: white;
        }

        .navbar-light .navbar-nav {
            font-family: "Heebo",sans-serif;
            color: #0E2E50;
            font-weight: 500;
        }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2; /* 限制最多顯示 2 行 */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .fs-7 {
            font-size: 0.875rem; /* 約 14px */
        }

        .fs-8 {
            font-size: 0.75rem; /* 約 12px */
        }

        .fs-9 {
            font-size: 0.7rem;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar Start -->
    <div class="container-fluid nav-bar bg-transparent">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center text-center">
                <div class="">
                    <img class="logo-img" src="~/img/破爛電子書logo.png" alt="Icon" style="height: 60px">
                </div>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">會員管理</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a class="dropdown-item" asp-area="" asp-controller="Member" asp-action="Index">會員清單</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Member" asp-action="Create">新增會員</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">電子書</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a class="dropdown-item" asp-area="" asp-controller="Ebook" asp-action="List">檢視管理電子書</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Ebook" asp-action="Create">新增電子書</a>
                            <a class="dropdown-item" asp-area="" asp-controller="EBookCategories" asp-action="List">類別管理</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Labels" asp-action="Index">標籤管理</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">二手書</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a class="dropdown-item" asp-controller="UsedBook" asp-action="GetPublicBookList">公開商品列表</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-controller="UsedBookUser" asp-action="GetUserBookList">賣家書本列表</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-controller="UsedBookAdmin" asp-action="GetAdminBookList">管理員書本列表</a>
                            <a class="dropdown-item disabled" asp-controller="UsedBookSaleTag" asp-action="SaleTagList">主題分類管理</a>
                            <a class="dropdown-item disabled" asp-controller="UsedBookSaleTag" asp-action="SaleTagList">促銷標籤管理</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-controller="UsedBookAuth" asp-action="Index">使用者驗證</a>
                            <a class="dropdown-item" asp-controller="UsedBookUser" asp-action="Me">當前使用者</a>
                            <form asp-controller="UsedBookAuth" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item border-0 bg-transparent">登出</button>
                            </form>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">募資</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a class="dropdown-item" asp-area="" asp-controller="DonateCategory" asp-action="CategoriesList">募資分類</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Donate" asp-action="List">募資專案列表</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">討論區</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a class="dropdown-item" asp-controller="ForumPosts" asp-action="Index">文章列表</a>
                            <a class="dropdown-item" asp-controller="ForumPosts" asp-action="Create">發表文章</a>
                            <!-- 若 Edit/Delete 要傳 id，這裡可以先省略或改成 View 列表點入 -->
                            <!-- 或改成管理用的控制面板連結 -->
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->

    <div class="container-fluid" style="padding: 0 3rem;">
        <main class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - prjBookAppCoreMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
